/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 20px 10px
  color #fff
  font-size 26px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  .nav
    position absolute
    left 20px
    .button
      color main-color
      background-color #fff

      margin-right 10px
      float left
      font-size 15px
      margin-top -13px

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 500px

  p
    margin-bottom 20px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

.columns
  column-count: 3;
  column-gap: 20px;

#uhlist
  li
    margin-bottom 1.6em
    a
      font-size 1.2em
      color darken(main-color, 60%)

.button
  display inline-block
  padding 15px
  color #fff
  text-align center
  text-decoration none
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)
  border-radius 4px

h2, h3
  text-align center
  font-weight bold

h2
  font-size 3em

h3
  font-size 2 em

h4
  font-size 1.4 em

.author
  margin-top 1em
  /* Border styles */
table thead, table tr
	border-top-width: 1px;
	border-top-style: solid;
	border-top-color: rgb(230, 189, 189);

table {
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: rgb(230, 189, 189);

  margin-top 20px
  margin-bottom 2px
}

  /* Padding and font style */
table td, table th {
	padding: 5px 10px;
	font-size: 12px;
	font-family: Verdana;
	color: rgb(177, 106, 104);
}
  /* Alternating background colors */
table tr:nth-child(even) {
	background: rgb(238, 211, 210)
}
table tr:nth-child(odd) {
	background: #FFF
}

thead
  th
    font-weight bold

@media screen and (max-width: 697px)
  header
    .nav
      top 80px
